@model CalcModel
<h2>ModelBindingInSeparateModel</h2>
<form asp-action="ModelBindingModel" method="post">
    <div>
        <label asp-for="Number1"></label>
        <input asp-for="Number1" class="form-control" />
    </div>
    <div>
        <label asp-for="Operation"></label>
        <select asp-for="Operation" class="form-control">
            <option value="+">+</option>
            <option value="-">-</option>
            <option value="*">*</option>
            <option value="/">/</option>
        </select>
    </div>
    <div>
        <label asp-for="Number2"></label>
        <input asp-for="Number2" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
